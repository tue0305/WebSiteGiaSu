extends ./layout
body 

  block formDangKy
    .tm-bg-white.ie-container-width-fix-2
      .container.ie-h-align-center-fix
        .row
          .col-xs-12.ml-auto.mr-auto.ie-container-width-fix
            form.tm-search-form.tm-section-pad-2(action ='/registration' type='submit' method='post')
              .form-row.tm-search-form-row
                .form-group.tm-form-element.tm-form-element-100
                  i.fa.fa-envelope-square.fa-2x.tm-form-element-icon
                  input#exampleInputEmail1.form-control(type='email' placeholder='Nhập địa chỉ email...' aria-describedby='emailHelp' name='email' required='')
                  small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
                .form-group.tm-form-element.tm-form-element-100
                  i.fa.fa-user.fa-2x.tm-form-element-icon
                  input#exampleInputUsername1.form-control(type='username' placeholder='Nhập tài khoản...' name='username' required='')
                .form-group.tm-form-element.tm-form-element-100
                  i.fa.fa-key.fa-2x.tm-form-element-icon
                  input#exampleInputPassword1.form-control(type='password' placeholder='Nhập mật khẩu...' name='password' required='')
                .form-group.tm-form-element.tm-form-element-100
                  i.fa.fa-address-card.fa-2x.tm-form-element-icon
                  input#exampleInputName1.form-control(type='text' placeholder='Họ và tên...' name='name' required='')
                .form-group.tm-form-element.tm-form-element-100
                  i.fa.fa-phone.fa-2x.tm-form-element-icon
                  input#exampleInputPhone1.form-control(placeholder='Số điện thoại...' type='tel' name='phone' required='')
                .form-group.tm-form-element.tm-form-element-50
                  //- // Date input
                  //- label(for='exampleInputDOB1') Ngày sinh:
                  i.fa.fa-calendar.fa-2x.tm-form-element-icon
                  input#dob.form-control(type='text' name='dob' placeholder='Chọn ngày sinh...' required='')
                .form-row.tm-search-form-row
                      .form-group.tm-form-element.tm-form-element-2
                        i.fa.fa-intersex.fa-2x.tm-form-element-icon
                        select#gender.form-control.tm-select(name='gender' required='')
                          option(value='Male') Nam
                          option(value='Female') Nữ
                  button.btn.btn-primary(type='submit' value='Submit') Submit

        //- javascript
    


    //- // load JS files
    
    script(src='js/jquery-1.11.3.min.js')
    //- // jQuery (https://jquery.com/download/)
    script(src='js/popper.min.js')
    //- // https://popper.js.org/
    script(src='js/bootstrap.min.js')
    //- // https://getbootstrap.com/
    script(src='js/datepicker.min.js')
    //- // https://github.com/qodesmith/datepicker
    script(src='js/jquery.singlePageNav.min.js')
    //- // Single Page Nav (https://github.com/ChrisWojcik/single-page-nav)
    script(src='slick/slick.min.js')
    //- // http://kenwheeler.github.io/slick/
      
    script.
      /* Google map
      ------------------------------------------------*/
      var map = '';
      var center;
      function initialize() {
        var mapOptions = {
          zoom: 16,
          center: new google.maps.LatLng(13.7567928,100.5653741),
          scrollwheel: false
        };
        map = new google.maps.Map(document.getElementById('google-map'),  mapOptions);
        google.maps.event.addDomListener(map, 'idle', function() {
          calculateCenter();
        });
        google.maps.event.addDomListener(window, 'resize', function() {
          map.setCenter(center);
        });
      }
      function calculateCenter() {
        center = map.getCenter();
      }
      function loadGoogleMap(){
        var script = document.createElement('script');
        script.type = 'text/javascript';
        script.src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyDVWt4rJfibfsEDvcuaChUaZRS5NXey1Cs&v=3.exp&sensor=false&' + 'callback=initialize';
        document.body.appendChild(script);
      }
      function setCarousel() {
        if ($('.tm-article-carousel').hasClass('slick-initialized')) {
          $('.tm-article-carousel').slick('destroy');
      }
      if($(window).width() < 438){
      // Slick carousel
        $('.tm-article-carousel').slick({
          infinite: false,
          dots: true,
          slidesToShow: 1,
          slidesToScroll: 1
        });
      }
      else {
        $('.tm-article-carousel').slick({
          infinite: false,
          dots: true,
          slidesToShow: 2,
          slidesToScroll: 1
          });
        }
      }
      function setPageNav(){
        if($(window).width() > 991) {
          $('#tm-top-bar').singlePageNav({
            currentClass:'active',
            offset: 79
          });
        }
        else {
          $('#tm-top-bar').singlePageNav({
            currentClass:'active',
            offset: 65
          });
        }
      }
      function togglePlayPause() {
        vid = $('.tmVideo').get(0);
        if(vid.paused) {
          vid.play();
          $('.tm-btn-play').hide();
          $('.tm-btn-pause').show();
        }
        else {
          vid.pause();
          $('.tm-btn-play').show();
          $('.tm-btn-pause').hide();
        }
      }
      $(document).ready(function(){
        $(window).on("scroll", function() {
          if($(window).scrollTop() > 100) {
            $(".tm-top-bar").addClass("active");
          }
          else {
      //remove the background property so it comes transparent again (defined in your css)
            $(".tm-top-bar").removeClass("active");
          }
        });
      // Google Map
        loadGoogleMap();
      // Date Picker
      
        const dob = datepicker('#dob');
        
        
      // Slick carousel
        setCarousel();
        setPageNav();
        $(window).resize(function() {
          setCarousel();
          setPageNav();
        });
        // Close navbar after clicked
        $('.nav-link').click(function(){
          $('#mainNav').removeClass('show');
        });
        // Control video
        $('.tm-btn-play').click(function() {
          togglePlayPause();
        });
        $('.tm-btn-pause').click(function() {
          togglePlayPause();
        });
        // Update the current year in copyright
        $('.tm-current-year').text(new Date().getFullYear());
      });

  
        